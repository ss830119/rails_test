<form action="<%= url_for(action: :index) %>" method="get" class="form-horizontal" role="form" > 
  <div class="form-group">
    <label class="col-lg-3 col-sm-3 control-label"><%= t('backends.daterange') %></label>
    <div class="col-lg-9">
      <input type="text" class="form-control" name="daterange" value="<%= params[:daterange] %>" data-value="<%= params[:daterange] %>" autocomplete="off" >
    </div>
  </div>                 
  <div class="form-group">
    <div class="col-lg-9 col-lg-offset-3">
      <button type="submit" class="btn btn-success btn-sm">
        <i class="fa fa-search"></i> 送出
      </button>
      <a href="<%= url_for(action: :index) %>" class="btn btn-sm btn-danger">
        <i class="fa fa-times"></i> 清除
      </a>
    </div>
  </div>
</form>